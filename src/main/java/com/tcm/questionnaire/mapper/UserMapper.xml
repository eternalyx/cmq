<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tcm.questionnaire.mapper.UserMapper">

    <sql id="selectSql">
        SELECT
          `id`,
          `username`,
          `password`,
          `create_by`,
          `create_time`,
          `last_update_by`,
          `last_update_time`,
          `is_deleted`
    </sql>

    <select id="selectByUsername" resultType="com.tcm.questionnaire.po.UserPO">
        <include refid="selectSql"/>
        from sys_user
        where username=#{username}
    </select>

</mapper>